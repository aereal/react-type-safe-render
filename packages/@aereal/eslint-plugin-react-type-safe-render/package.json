{
  "name": "@aereal/eslint-plugin-react-type-safe-render",
  "version": "1.0.0",
  "access": "public",
  "license": "MIT",
  "author": "aereal <aereal@aereal.org>",
  "homepage": "https://github.com/aereal/react-type-safe-render",
  "repository": {
    "url": "https://github.com/aereal/react-type-safe-render"
  },
  "bugs": {
    "url": "https://github.com/aereal/react-type-safe-render/issues"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p ."
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/no-unused-vars": 0
    }
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "devDependencies": {
    "@types/eslint": "^7.2.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  }
}
